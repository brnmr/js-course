<!DOCTYPE html>
<html>
<head>
    <title>04. Functions Part 1</title>
    <script type="text/javascript">

        /*
         * 04. Functions (Part 1) Homework
         * Create a recursive function which will output in the console
         * all data from a Object
         */

        function walk( data, level ) {

            level = level || 1;
            var indentation = new Array( level ).join( '   ' );

            for ( var property in data ) {
                if ( data.hasOwnProperty( property )) {

                    switch ( true ) {
                        case data[ property ] instanceof Array :
                            console.log( property + ': ' );
                            for ( i = 0, l = data[ property ].length; i < l; i += 1 ) {
                                j = i + 1;
                                console.log( indentation + j + '. ' + data[ property ][ i ]);
                            }
                            break;

                        case typeof data[ property ] == 'object' :
                            level += 1;
                            console.log( property + ': ' );
                            arguments.callee( data[ property ], level );
                            break;

                        case typeof data[ property ] == 'string' || typeof data[ property ] == 'number' :
                             if ( level > 1) {
                                console.log( indentation + property + ': ' + data[ property ] );
                             }
                             else {
                                 console.log( property + ': ' + data[ property ] );
                             }
                            break;

                    }

                }
            }
        }

        walk({
            'Course Name'        : 'JavaScript for beginners',
            'Duration (hours)'   : 36,
            'Student List'       : [
                'Tom', 'John', 'Jane', 'Jill', 'Peter'
            ],
            'Lector'             : {
                'Name'   : 'Hristo Chakarov',
                'Age'    : 29,
                'Title'  : 'Front-end Architect'
            }
        })

    </script>
</head>
<body>

</body>
